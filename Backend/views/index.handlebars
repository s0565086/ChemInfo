<div class="container" style="margin-top: 8%;">
    <div class="col-md-12">
        <div class="row ">
            <div id="logo" class="text-center">
                <h1>Chem Info</h1><p>Search your chemicals</p>
            </div>
        </div>
    </div>
        <div id="from-buscar" class="input-group d-flex justify-content-center bg-secondary mb-3">
            <input id="inputChem" class="form-control p-2" type="text" placeholder="Search..." required/>
            <span class="input-group-btn">
                            <button class="btn btn-success" type="submit" onclick="submit_search()">
                                <i class="glyphicon glyphicon-search" aria-hidden="true"></i> Search
                            </button>
            </span>
        </div>

</div>
<script>
    function submit_search() {
        const param = document.getElementById("inputChem").value
        const url = "/chemicals/search/" + param
        document.getElementById("form-buscar").action = url
        document.getElementById("form-buscar").submit();
    }
</script>