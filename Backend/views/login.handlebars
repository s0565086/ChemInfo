<div class="text-center form-signin mt-5">
    <h3>Login</h3>
    {{#if messages.error}}
        <div>{{messages.error}}</div>
    {{/if}}
    <form class="" action="/login" name="loginForm" id="loginForm" method="post">
        <p>Username: <input class="ml-2" type="text" name="username" id="username"> </p>
        <p>Password: <input class="ml-3" type="password" name="password" id="password"> </p>
        <p><input class="w-30 btn btn-lg btn-primary" type="submit" value="Login"> </p>
    </form>
</div>