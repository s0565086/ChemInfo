<div class="mr-5 ml-5 mt-3">
    <h1>Chemikalien Hinzufuegen</h1>
    <form class="mt-3" action="/chemicals/added" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="gsbl_rn">GSBL-RN: </label>
                <input class="form-control" type="text" name="gsbl_rn" id="gsbl_rn">
            </div>
            <div class="form-group col-md-6">
                <label for="cas_rn">CAS-RN: </label>
                <input class="form-control" type="text" name="cas_rn" id="cas_rn">
            </div>
        </div>
        <div class="form-group">
            <label for="name_name">Name: </label>
            <input class="form-control" type="text" name="name_name" id="name_name">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="type">Namenstyp: </label>
                <select id="type" name="type" class="form-control">
                    {{#each types}}
                        <option value="{{this.type_name}}">{{this.type_name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="language">Sprache: </label>
                <select id="language" name="language" class="form-control">
                    {{#each languages}}
                        <option value="{{this.language_abbreviation}}">{{this.language_name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="chem_description">Beschreibung: </label>
            <input type="text" name="chem_description" id="chem_description" class="form-control">
        </div>
        <input class="btn btn-primary" type="submit" value="Speichern">


    </form>
</div>