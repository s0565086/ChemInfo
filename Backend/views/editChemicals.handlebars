<div class="mr-5 ml-5 mt-3">
    <h1>Chemikalien Bearbeiten</h1>
    <form class="mt-3" action="/chemicals/edited" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="gsbl_rn">GSBL-RN: </label>
                <input type="text" class="form-control" name="gsbl_rn" id="gsbl_rn" value="{{chemical.gsbl_rn}}">
            </div>
            <div class="form-group col-md-6">
                <label for="cas_rn">CAS-RN: </label>
                <input type="text" class="form-control" name="cas_rn" id="cas_rn" value="{{chemical.cas_rn}}">
            </div>
        </div>
        <div class="form-group">
            <label for="name_name">Name: </label>
            <input type="text" class="form-control" name="name_name" id="name_name" value="{{chemical.name_name}}">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="type">Namenstyp: </label>
                <select id="type" name="type" class="form-control">
                    {{#each types}}
                        <option value="{{this.type_name}}" {{selected this.type_name ../chemical.type}}>{{this.type_name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="language">Sprache: </label>
                <select id="language" name="language" class="form-control">
                    {{#each languages}}
                        <option value="{{this.language_abbreviation}}" {{selected this.language_abbreviation ../chemical.language}}>{{this.language_name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="chem_description">Beschreibung: </label>
            <input type="text" class="form-control" name="chem_description" id="chem_description" value="{{chemical.chem_description}}">
        </div>
        <input class="btn btn-primary" type="submit" value="Speichern">


    </form>
</div>